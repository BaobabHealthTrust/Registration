<style>

    .color_white {
        background-color:white;
    }

    .color_darkslatedgray {
        background-color:#d3d3d3;
    }

    td {
        border-style: solid;
        border-width: 1px;
        border-color: #d3d3d3;
    }

    table {
        font-size: 1.05em;
    }

